// 0 = allow, 1 = warn, 2 = error
{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "es2020": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./.babelrc",
      "allowAwaitOutsideFunction": true
    }
  },
  "rules": {
    "quotes": [1, "single"],
    "no-debugger": [2],
    "complexity": [2],
    "semi": [2, "never"]
  }
}